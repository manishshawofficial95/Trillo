{
  "name": "trillo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "live-server": "live-server",
    "watch:sass": "sass sass/main.scss css/style.css -w",
    "start": "npm-run-all -p live-server watch:sass",
    "compile:sass": "sass --no-source-map sass/main.scss css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.comp.css -o css/style.prefix.css",
    "compress:css": "sass --no-source-map --style=compressed css/style.prefix.css css/style.min.css",
    "build": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Mani",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.3.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "sass": "^1.38.2"
  }
}
